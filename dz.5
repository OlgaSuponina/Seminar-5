int[] array = new int[10];
for (int i = 0; i < array.Length; i++)
    array[i] = new Random().Next(100, 1000);

Console.WriteLine("[" + string.Join(", ", array) + "]");
int count = 0;
for (int i = 0; i < array.Length; i++)
{
    if (array[i] % 2 == 0)
        count++; // count = count + 1;
}
Console.WriteLine("Кол-во четных элементов в массиве: " + count);


